{
  "name": "@app/monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "app-web",
    "app-realtime/partykit"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=app-web",
    "dev:web": "npm run dev --workspace=app-web",
    "dev:realtime": "npm run dev --workspace=app-realtime/partykit",
    "dev:all": "concurrently \"npm run dev:web\" \"npm run dev:realtime\"",
    "build": "npm run build --workspaces",
    "build:web": "npm run build --workspace=app-web",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "lint": "npm run check --workspaces --if-present",
    "clean": "rm -rf node_modules app-web/node_modules app-realtime/partykit/node_modules app-web/.next"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
